<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item android:bottom="0px" android:left="-1dp" android:top="0px" android:right="0dp">
                <shape>
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/orange" android:width="@dimen/line_width"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="0px" android:left="-1dp" android:top="0px" android:right="0dp">
                <shape>
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/orange" android:width="@dimen/line_width"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="0px" android:left="-1dp" android:top="0px" android:right="0dp">
                <shape>
                    <solid android:color="@color/orange_dark"/>
                    <stroke android:color="@color/orange" android:width="@dimen/line_width"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>