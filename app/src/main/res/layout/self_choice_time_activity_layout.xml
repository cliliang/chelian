<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ceyu.carsteward.self.views.SelfChoiceTimeView
        android:id="@+id/self_choice_time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/common_top_bottom_line_bg"
        android:gravity="right">

        <TextView
            android:id="@+id/self_choice_time_next_step"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/take_red_packet_button_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/self_next_step"
            android:textColor="@drawable/take_red_packet_text_selector"
            android:textSize="@dimen/normal_font_size" />

    </LinearLayout>

</RelativeLayout>