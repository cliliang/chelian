<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/self_select_root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/orange"
    android:padding="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/self_select_item_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/self_select_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/self_select_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/small_font_size"
                android:text="name"/>
            <TextView
                android:id="@+id/self_select_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/small_font_size"
                android:text="$88"/>
            <TextView
                android:id="@+id/self_select_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/self_commodity_detail"
                android:textSize="@dimen/small_font_size"
                android:textColor="@color/white"
                android:background="@drawable/common_orange_round_bg"
                android:layout_marginRight="3dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:clickable="true"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"/>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>