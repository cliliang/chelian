<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/modify_name_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/normal_text_style"
        android:text="@string/modify_nick_name"
        android:gravity="center"/>

    <EditText
        android:id="@+id/modify_nick_name_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        style="@style/normal_text_style"
        android:paddingLeft="5dp"
        android:background="@drawable/common_round_corner_button"/>

    <include layout="@layout/common_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/modify_nick_name_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:clickable="true"
            style="@style/normal_text_style"
            android:text="@string/cancel"/>
        <include layout="@layout/common_vertical_line"/>

        <TextView
            android:id="@+id/modify_nick_name_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            style="@style/normal_text_style"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/modify"/>

    </LinearLayout>



</LinearLayout>