<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bottom_orange_line_bg"
        android:orientation="horizontal"
        android:gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_phone"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/user_login_phone_number_id"
            style="@style/normal_text_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_input_edit_height"
            android:background="@null"
            android:gravity="bottom"
            android:hint="@string/user_input_phone_number"
            android:inputType="phone"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/text_hint" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_bottom_orange_line_bg"
        android:orientation="horizontal"
        android:gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_pass"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/user_login_check_code_id"
            style="@style/normal_text_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/user_input_edit_height"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="bottom"
            android:hint="@string/user_input_phone_code"
            android:inputType="number"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/text_hint" />

        <TextView
            android:id="@+id/user_login_get_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/take_red_packet_button_bg"
            android:clickable="true"
            android:padding="3dp"
            android:text="@string/user_get_phone_code"
            android:textColor="@drawable/take_red_packet_text_selector"
            android:textSize="@dimen/middle_font_size" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="@drawable/login_check_box_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agree"
            android:layout_marginLeft="5dp"
            android:textColor="@color/orange"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/user_use_app_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_app_service"
            android:textColor="@color/orange"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:textSize="@dimen/normal_font_size" />

    </LinearLayout>

    <Button
        android:id="@+id/user_login_button_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_input_edit_height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:background="@drawable/take_red_packet_button_bg"
        android:text="@string/user_login"
        android:textColor="@drawable/take_red_packet_text_selector"
        android:textSize="@dimen/normal_font_size" />
</LinearLayout>