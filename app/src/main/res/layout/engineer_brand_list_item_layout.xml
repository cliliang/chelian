<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/engineer_choice_brand_item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/engineer_brand_item1_height"
        android:background="@drawable/engineer_check_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/engineer_list_item1_margin"
        android:textColor="@color/normal_text_color" />

    <TextView
        android:id="@+id/engineer_choice_brand_item2"
        style="@style/normal_text_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/engineer_brand_item2_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/engineer_brand_item1_height" />

    <include layout="@layout/common_horizontal_line" />

</LinearLayout>