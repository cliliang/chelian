<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/maintain_max_item_margin_left"
    android:paddingRight="@dimen/maintain_max_item_margin_left"
    android:background="@drawable/common_bottom_line_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shop_info_tuan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="@style/normal_text_style"
        android:lineSpacingMultiplier="1.5"
        android:text="title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/shop_info_tuan_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12people"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/normal_font_size"/>

        <TextView
            android:id="@+id/shop_info_tuan_factory_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$190"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@color/text_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/normal_font_size"
            android:text="@string/rmb"/>
        <TextView
            android:id="@+id/shop_info_tuan_bang_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$110"
            android:paddingRight="6dp"
            android:textColor="@color/orange"
            android:textSize="30sp"/>
    </LinearLayout>

</LinearLayout>