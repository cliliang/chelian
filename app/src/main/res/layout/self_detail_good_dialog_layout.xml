<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/self_detail_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/self_detail_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="@style/middle_text_style"
                        android:text="name"/>

                    <TextView
                        android:id="@+id/self_detail_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="money"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/middle_font_size"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/self_detail_short"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="info"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/small_font_size"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/normal_font_size"
            android:text="@string/self_dialog_good_detail"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/self_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content"
            android:layout_marginTop="10dp"
            style="@style/middle_text_style"
            android:lineSpacingMultiplier="1.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="right">

            <TextView
                android:id="@+id/self_detail_cancel"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/self_cancel"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@drawable/take_red_packet_text_selector"
                android:background="@drawable/take_red_packet_button_bg"
                android:textSize="@dimen/normal_font_size"/>

            <TextView
                android:id="@+id/self_detail_choice"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/self_choice"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:textColor="@drawable/take_red_packet_text_selector"
                android:background="@drawable/take_red_packet_button_bg"
                android:textSize="@dimen/normal_font_size"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>