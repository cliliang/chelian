<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/maintain_group_child_item_min_height">

        <TextView
            android:id="@+id/maintain_combo_child_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/middle_font_size"
            android:layout_marginLeft="@dimen/maintain_child_text_margin_left"/>

        <TextView
            android:id="@+id/maintain_combo_child_price"
            android:layout_width="@dimen/maintain_money_max_width"
            android:layout_height="wrap_content"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/middle_font_size"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_circle"
            android:layout_marginRight="@dimen/maintain_arrow_margin_right"/>
    </LinearLayout>
</LinearLayout>