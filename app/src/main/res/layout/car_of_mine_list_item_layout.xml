<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/car_of_mine_list_item_height"
        android:background="@drawable/common_bottom_line_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuan_reserve_choice_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/car_of_mine_icon_margin_left"
            android:visibility="gone"
            android:src="@mipmap/check_orange_normal"/>

        <ImageView
            android:id="@+id/car_of_mine_icon_id"
            android:layout_width="@dimen/car_of_mine_icon_width"
            android:layout_height="@dimen/car_of_mine_icon_width"
            android:layout_marginLeft="@dimen/car_of_mine_icon_margin_left" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/car_of_mine_board_id"
                    style="@style/normal_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/car_of_mine_model_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/start_red_margin_left"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/car_of_mine_license_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/start_red_margin_left"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/normal_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/car_of_mine_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/car_of_mine_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/start_red_margin_left"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/normal_font_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>