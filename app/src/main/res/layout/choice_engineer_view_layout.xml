<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/engineer_main_top_height"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/engineer_choice_brand_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/engineer_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/middle_font_size"
            android:text="@string/engineer_all_brand" />

        <ImageView
            android:id="@+id/engineer_choice_brand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/engineer_arrow_margin_left"
            android:contentDescription="@android:string/cancel"
            android:src="@mipmap/arraw_d" />

    </LinearLayout>

    <include layout="@layout/common_vertical_line" />

    <LinearLayout
        android:id="@+id/engineer_choice_type_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/engineer_type_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/middle_font_size"
            android:gravity="center"
            android:text="@string/engineer_all_function" />

        <ImageView
            android:id="@+id/engineer_choice_type_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/engineer_arrow_margin_left"
            android:contentDescription="@android:string/cancel"
            android:src="@mipmap/arraw_d" />
    </LinearLayout>

    <include layout="@layout/common_vertical_line" />

    <LinearLayout
        android:id="@+id/engineer_choice_local_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/engineer_local_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/normal_text_style"
            android:text="@string/user_choice_local" />

        <ImageView
            android:id="@+id/engineer_choice_local_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/engineer_arrow_margin_left"
            android:contentDescription="@android:string/cancel"
            android:src="@mipmap/arraw_d" />
    </LinearLayout>

</LinearLayout>