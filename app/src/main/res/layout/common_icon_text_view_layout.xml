<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/engineer_check_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/common_icon_text_icon_id"
        android:layout_width="@dimen/common_icon_text_image_width"
        android:layout_height="@dimen/common_icon_text_image_width"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@mipmap/icon_color_myredbag" />

    <TextView
        android:id="@+id/common_icon_text_text_id"
        style="@style/normal_text_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="II" />

    <ImageView
        android:id="@+id/common_icon_text_right_ic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/common_icon_right_margin_right"
        android:paddingRight="@dimen/common_icon_right_margin_right"
        android:src="@mipmap/arraw_right" />

</LinearLayout>