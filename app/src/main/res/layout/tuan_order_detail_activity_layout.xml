<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tuan_order_main_layout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="@drawable/common_bottom_line_layout"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/tuan_content_view_margin_left"
                android:paddingRight="@dimen/tuan_content_view_margin_left">

                <TextView
                    android:id="@+id/tuan_order_shop_name"
                    style="@style/normal_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tuan_order_shop_address_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/small_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg"
                android:paddingLeft="@dimen/tuan_content_view_margin_left"
                android:paddingRight="@dimen/tuan_content_view_margin_left"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tuan_describe_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/tuan_order_describe_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size"
                    android:layout_marginTop="5dp"
                    android:lineSpacingMultiplier="1.3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="@dimen/tuan_content_view_margin_left"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/common_bottom_line_layout"
                    android:gravity="center_vertical"
                    android:text="@string/tuan_content_describe_content"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/tuan_order_content_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="15dp"
                    android:paddingLeft="@dimen/tuan_content_view_margin_left"
                    android:paddingRight="@dimen/tuan_content_view_margin_left"
                    android:paddingTop="15dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/tuan_order_end_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tuan_order_item_height"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/tuan_content_view_margin_left"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/normal_font_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tuan_order_item_height"
                android:background="@drawable/common_top_bottom_line_bg"
                android:clickable="true"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/tuan_content_view_margin_left">

                <TextView
                    style="@style/middle_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/tuan_reserve_arrive_shop_time" />

                <TextView
                    android:id="@+id/tuan_order_achive_shop_time"
                    style="@style/middle_text_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/tuan_reserve_view_margin_left"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tuan_order_change_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tuan_order_change_time"
                    android:gravity="center_vertical"
                    android:paddingRight="30dp"
                    android:paddingLeft="20dp"
                    android:clickable="true"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/middle_font_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tuan_order_item_height"
                android:background="@drawable/common_bottom_line_layout"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/tuan_content_view_margin_left">

                <TextView
                    style="@style/middle_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/tuan_order_car_info" />

                <TextView
                    android:id="@+id/tuan_order_car_info"
                    style="@style/middle_text_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/tuan_reserve_view_margin_left"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tuan_order_item_height"
                android:background="@drawable/common_bottom_line_layout"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    style="@style/middle_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/tuan_content_view_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/tuan_order_car_license" />

                <TextView
                    android:id="@+id/reserve_order_license_number"
                    style="@style/middle_text_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/tuan_reserve_view_margin_left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/text_hint" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tuan_order_item_height"
                android:background="@drawable/common_bottom_line_layout"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/tuan_content_view_margin_left">

                <TextView
                    style="@style/middle_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/reserve_maintain_use_name" />

                <TextView
                    android:id="@+id/tuan_order_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/tuan_reserve_view_margin_left"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/middle_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tuan_order_item_height"
                android:background="@drawable/common_bottom_line_layout"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/tuan_content_view_margin_left">

                <TextView
                    style="@style/middle_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/reserve_maintain_use_phone" />

                <TextView
                    android:id="@+id/tuan_order_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingLeft="@dimen/tuan_reserve_view_margin_left"
                    android:gravity="center_vertical"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/middle_font_size" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/maintain_shop_order_layout_height"
        android:layout_gravity="bottom"
        android:background="@drawable/common_top_line_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/maintain_discount_margin_left"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/orange"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:id="@+id/tuan_order_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/maintain_list_content_margin_right"
            android:gravity="bottom"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/maintain_list_content_unit_margin_bottom"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="bottom"
            android:text="@string/maintain_money_unit"
            android:textColor="@color/orange"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tuan_order_pay_button"
            style="@style/commonButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/maintain_combo_i_want_order" />
    </LinearLayout>
</LinearLayout>