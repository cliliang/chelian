<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_car_choice_brand_item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/engineer_brand_item1_height"
        android:background="@drawable/engineer_check_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/engineer_list_item1_margin"
        android:clickable="true"
        android:textColor="@color/normal_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/engineer_brand_item2_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/add_car_broad_icon_id"
            android:layout_width="@dimen/add_car_brand_icon_broad"
            android:layout_height="@dimen/add_car_brand_icon_broad"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/add_car_choice_brand_item2"
            style="@style/normal_text_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <include layout="@layout/common_horizontal_line"/>
</LinearLayout>