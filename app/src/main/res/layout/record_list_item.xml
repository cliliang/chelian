<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_top_bottom_line_bg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/record_listitem_contentverticalmargin"
            android:paddingTop="@dimen/record_listitem_contentverticalmargin">

            <TextView
                android:id="@+id/tv_recordlistitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_recordlistitem_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/record_listitem_location_to_date"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/small_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/record_listitem_contentverticalmargin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recordlistitem_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="3"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/middle_font_size" />

            <TextView
                android:id="@+id/tv_recordlistitem_expand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/record_listitem_expand_height"
                android:gravity="center_vertical"
                android:text="@string/record_expand"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/middle_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_recordListitem_imageparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_recordlistitem_image0"
                    android:layout_width="@dimen/record_imagepicker_heightwidth"
                    android:layout_height="@dimen/record_imagepicker_heightwidth"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_recordlistitem_image1"
                    android:layout_width="@dimen/record_imagepicker_heightwidth"
                    android:layout_height="@dimen/record_imagepicker_heightwidth"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_recordlistitem_image2"
                    android:layout_width="@dimen/record_imagepicker_heightwidth"
                    android:layout_height="@dimen/record_imagepicker_heightwidth"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_recordlistitem_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00 00:00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_recordlistitem_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingBottom="@dimen/record_listitem_contentverticalmargin"
                android:paddingTop="@dimen/record_listitem_contentverticalmargin"
                android:text="@string/share"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/middle_font_size"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_recordlistitem_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/record_listitem_contentverticalmargin"
                android:paddingLeft="@dimen/record_listitem_sharetodelete"
                android:paddingTop="@dimen/record_listitem_contentverticalmargin"
                android:text="@string/delete"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/middle_font_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>