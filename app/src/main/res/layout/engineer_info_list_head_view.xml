<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:utils="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_block_view_margin_top"
        android:background="@drawable/common_top_bottom_line_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <com.ceyu.carsteward.common.ui.views.CircleHeadImageView
            android:id="@+id/engineer_info_head_id"
            android:layout_width="@dimen/engineer_list_head_width"
            android:layout_height="@dimen/engineer_list_head_width"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            utils:border_color="@color/line_color"
            utils:border_width="1px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/engineer_info_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                style="@style/engineer_user_info_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/engineer_local" />

            <TextView
                style="@style/engineer_user_info_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/engineer_service_year" />

            <TextView
                style="@style/engineer_user_info_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/engineer_take_order" />

            <TextView
                style="@style/engineer_user_info_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/engineer_function_content" />

            <TextView
                style="@style/engineer_user_info_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/engineer_list_item_beyond"
                android:text="@string/engineer_like_brand" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/engineer_level_margin_left"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_font_size"
                    android:text="HE"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/engineer_info_level_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_gravity="bottom"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size" />
            </FrameLayout>


            <TextView
                android:id="@+id/engineer_info_local_id"
                style="@style/engineer_user_info_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/engineer_info_year_id"
                style="@style/engineer_user_info_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/engineer_info_order_count"
                style="@style/engineer_user_info_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/engineer_info_order_function"
                style="@style/engineer_user_info_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/engineer_info_brand_id"
                style="@style/engineer_user_info_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/engineer_list_item_beyond" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/engineer_dollar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/rmb"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/engineer_info_money_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/engineer_dollar_icon"
                android:gravity="top"
                android:textColor="@color/orange"
                android:textSize="@dimen/engineer_money_info_size" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_block_view_margin_top"
        android:background="@drawable/common_top_bottom_line_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/engineer_info_describe"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/engineer_info_describe_id"
            style="@style/middle_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/engineer_describe_margin_left"
            android:layout_marginRight="@dimen/engineer_describe_margin_left"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:lineSpacingMultiplier="1.3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/engineer_operator_commit"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/normal_font_size" />

        <LinearLayout
            android:id="@+id/engineer_info_imageparent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/engineer_certificate_height"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/engineer_info_image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter" />
            <ImageView
                android:id="@+id/engineer_info_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/engineer_info_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_block_view_margin_top"
        android:background="@drawable/common_top_bottom_line_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/engineer_comment_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="@string/engineer_user_comment"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/engineer_info_good_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/common_yellow_color_bg"
                android:gravity="center_vertical|right"
                android:paddingLeft="@dimen/engineer_list_margin_top_bottom"
                android:paddingRight="@dimen/engineer_list_margin_top_bottom"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/small_font_size" />
        </LinearLayout>

        <include layout="@layout/common_horizontal_line" />

    </LinearLayout>

</LinearLayout>