<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/maintain_order_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/reserve_order_top_view_height"
            android:layout_marginTop="@dimen/common_block_view_margin_top"
            android:background="@drawable/common_top_bottom_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
            android:paddingRight="@dimen/reserve_order_item_padding_left_right">

            <ImageView
                android:id="@+id/maintain_order_car_icon"
                android:layout_width="@dimen/reserve_car_icon_width"
                android:layout_height="@dimen/reserve_car_icon_width"
                android:contentDescription="@android:string/cancel" />

            <TextView
                android:id="@+id/maintain_order_car_info"
                style="@style/normal_text_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/reserve_pay_check_margin_right"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/maintain_order_car_plate"
                style="@style/normal_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
            android:layout_marginTop="@dimen/common_block_view_margin_top"
            android:background="@drawable/common_top_bottom_line_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/maintain_order_shop_name"
                style="@style/normal_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/maintain_order_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/middle_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_bottom_line_layout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
            android:paddingRight="@dimen/reserve_order_item_padding_left_right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/maintain_must_optional_item"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />

            <LinearLayout
                android:id="@+id/maintain_order_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/maintain_sort_padding"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/maintain_order_optional_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maintain_optional_item"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />

            <LinearLayout
                android:id="@+id/maintain_order_optional_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maintain_sort_padding"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/maintain_order_door_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_take_back_car"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/normal_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:paddingLeft="@dimen/maintain_sort_padding"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/middle_font_size"
                        android:text="@string/reserve_order_take_car" />

                    <TextView
                        android:id="@+id/maintain_order_door_money"
                        android:layout_width="@dimen/reserve_order_price_width"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/middle_font_size" />

                </LinearLayout>

                <TextView
                    android:id="@+id/maintain_order_take_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="@dimen/maintain_sort_padding"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size" />

                <TextView
                    android:id="@+id/maintain_order_back_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="@dimen/maintain_sort_padding"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/maintain_order_discount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_block_view_margin_top"
            android:orientation="vertical"
            android:background="@drawable/common_bottom_line_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="@string/maintain_discount_count"
                android:textColor="@color/orange"
                android:background="@drawable/common_top_bottom_line_bg"
                android:textSize="@dimen/normal_font_size"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/reserve_order_item_padding_left_right"/>

            <LinearLayout
                android:id="@+id/maintain_order_discount_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
                android:paddingRight="@dimen/reserve_order_item_padding_left_right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/maintain_order_free_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_block_view_margin_top"
            android:background="@drawable/common_top_bottom_line_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maintain_order_free_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
                android:paddingRight="@dimen/reserve_order_item_padding_left_right"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/maintain_order_free_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
                android:paddingRight="@dimen/reserve_order_item_padding_left_right"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/middle_font_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/maintain_order_modify_service_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reserve_reset_time_item_height"
            android:layout_marginTop="@dimen/common_block_view_margin_top"
            android:background="@drawable/common_top_bottom_line_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
            android:paddingRight="@dimen/reserve_order_item_padding_left_right">

            <TextView
                style="@style/normal_text_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/reserve_order_service_time" />

            <TextView
                android:id="@+id/maintain_order_service_time"
                style="@style/normal_text_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/reserve_order_change_time"
                android:textColor="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/maintain_order_take_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reserve_reset_time_item_height"
            android:background="@drawable/common_bottom_line_layout"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
            android:paddingRight="@dimen/reserve_order_item_padding_left_right">

            <TextView
                style="@style/normal_text_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/reserve_order_take_time" />

            <TextView
                android:id="@+id/maintain_order_take_time"
                style="@style/normal_text_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/reserve_order_change_time"
                android:textColor="@color/orange" />

        </LinearLayout>

        <TextView
            android:id="@+id/maintain_order_use_name"
            style="@style/normal_text_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reserve_reset_time_item_height"
            android:layout_marginTop="@dimen/common_block_view_margin_top"
            android:background="@drawable/common_top_bottom_line_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
            android:paddingRight="@dimen/reserve_order_item_padding_left_right" />

        <TextView
            android:id="@+id/maintain_order_use_phone"
            style="@style/normal_text_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reserve_reset_time_item_height"
            android:background="@drawable/common_bottom_line_layout"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
            android:paddingRight="@dimen/reserve_order_item_padding_left_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/online_pay_back_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:visibility="invisible"
                android:layout_marginBottom="5dp"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:text="@string/reserve_order_bottom_text"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/reserve_orange_line"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/maintain_order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/orange"
                    android:gravity="bottom"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/yuan"
                    android:layout_marginBottom="3dp"
                    android:gravity="bottom"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <TextView
                android:id="@+id/maintain_order_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:background="@drawable/take_red_packet_button_bg"
                android:text="@string/reserve_cancel_order"
                android:textColor="@drawable/take_red_packet_text_selector"
                android:textSize="@dimen/normal_font_size" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>