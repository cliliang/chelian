<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_bottom_line_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_bottom_line_layout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/points_item_image_view"
                android:layout_width="150dp"
                android:layout_height="95dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/points_item_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="top|left"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/points_item_describe_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="content"
                    android:maxLines="3"
                    android:lineSpacingMultiplier="1.3"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/points_item_points_view"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:gravity="center_vertical"
                android:text="89999"
                android:layout_marginLeft="5dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/middle_font_size" />

            <TextView
                android:id="@+id/points_item_money_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="SIZE"
                android:textSize="@dimen/small_font_size"
                android:textColor="@color/text_hint" />

            <TextView
                android:id="@+id/points_item_exchange_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/take_red_packet_button_bg"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="@string/point_exchange"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@drawable/take_red_packet_text_selector"
                android:textSize="@dimen/middle_font_size" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>