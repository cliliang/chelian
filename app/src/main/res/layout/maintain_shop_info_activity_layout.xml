<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="171dp">

            <ImageView
                android:id="@+id/shop_info_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contentDescription="@android:string/cancel"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/shop_info_image_number"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shop_image_page_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/small_font_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/maintain_view_margin_top"
            android:background="@drawable/common_bottom_line_layout"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/maintain_max_item_margin_left">

            <TextView
                android:id="@+id/shop_info_shop_name"
                style="@style/normal_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/shop_info_shop_address"
                style="@style/middle_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maintain_view_margin_top"
            android:background="@drawable/common_top_bottom_line_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/maintain_item_max_height"
                android:background="@drawable/common_bottom_line_layout"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/maintain_max_item_margin_left"
                android:text="@string/shop_info_describe"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/shop_info_describe_id"
                style="@style/middle_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="@dimen/maintain_max_item_margin_left"
                android:paddingRight="@dimen/maintain_max_item_margin_left" />

            <TextView
                android:id="@+id/shop_info_view_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingBottom="18dp"
                android:paddingLeft="@dimen/maintain_max_item_margin_left"
                android:paddingTop="10dp"
                android:text="@string/shop_info_all_txt"
                android:textColor="@color/orange"
                android:textSize="@dimen/middle_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maintain_view_margin_top"
            android:background="@drawable/common_top_bottom_line_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/maintain_item_max_height"
                android:background="@drawable/common_bottom_line_layout"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/maintain_max_item_margin_left"
                android:text="@string/shop_info_different"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/shop_info_different_id"
                style="@style/middle_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:paddingBottom="18dp"
                android:paddingLeft="@dimen/maintain_max_item_margin_left"
                android:paddingRight="@dimen/maintain_max_item_margin_left"
                android:paddingTop="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/shop_info_tuan_layout_tilte"
            android:layout_width="match_parent"
            android:layout_height="@dimen/maintain_item_max_height"
            android:layout_marginTop="@dimen/maintain_view_margin_top"
            android:background="@drawable/common_bottom_line_layout"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/maintain_max_item_margin_left"
            android:text="@string/shop_info_tuan_about"
            android:textColor="@color/orange"
            android:textSize="@dimen/normal_font_size" />

        <LinearLayout
            android:id="@+id/shop_info_about_tuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView>