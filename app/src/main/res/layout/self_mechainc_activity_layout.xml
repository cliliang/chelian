<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/self_choice_engineer_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:smoothScrollbar="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_top_bottom_line_bg"
            android:gravity="right">

            <TextView
                android:id="@+id/self_choice_mechanic_next_step"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/take_red_packet_button_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/self_next_step"
                android:textColor="@drawable/take_red_packet_text_selector"
                android:textSize="@dimen/normal_font_size" />

        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/self_mechanic_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/self_black"
        android:cacheColorHint="@color/transparency" />

</FrameLayout>