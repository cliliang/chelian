<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/self_reserve_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_block_view_margin_top"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/self_view_margin_left"
                android:paddingTop="15dp"
                android:text="@string/self_maintain_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />

            <LinearLayout
                android:id="@+id/self_maintain_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="35dp" />

            <LinearLayout
                android:id="@+id/self_reserve_choice_shop_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="@dimen/common_block_view_margin_top"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/self_reserve_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/self_view_margin_left"
                        android:paddingTop="8dp"
                        android:text="@string/self_reserve_shop"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_font_size" />

                    <TextView
                        android:id="@+id/self_reserve_shop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/self_view_margin_left"
                        android:paddingRight="15dp"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/middle_font_size" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/arraw_right"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/self_reserve_choice_mechanic_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/common_block_view_margin_top"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/self_view_margin_left"
                    android:text="@string/self_reserve_mechanic"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/self_reserve_mechanic_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/normal_font_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arraw_right"
                    android:layout_marginRight="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/self_reserve_time_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true"
                android:layout_marginTop="@dimen/common_block_view_margin_top"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/self_view_margin_left"
                    android:text="@string/self_reserve_time"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/self_reserve_mechanic_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/normal_font_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arraw_right"
                    android:layout_marginRight="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_block_view_margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/self_view_margin_left"
                        android:text="@string/self_car_info"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_font_size" />

                    <TextView
                        android:id="@+id/self_reserve_car_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/normal_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/normal_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/maintain_common_text_margin_left"
                        android:gravity="center_vertical"
                        android:text="@string/self_car_plate" />

                    <TextView
                        android:id="@+id/self_reserve_car_plate1"
                        style="@style/normal_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/reserve_center1_margin_left"
                        android:paddingRight="@dimen/reserve_center_margin_left_right" />

                    <ImageView
                        android:id="@+id/self_reserve_choice_plate1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:paddingLeft="@dimen/reserve_center_margin_left_right"
                        android:paddingRight="@dimen/reserve_center_margin_left_right"
                        android:src="@mipmap/arraw_d" />

                    <TextView
                        android:id="@+id/self_reserve_car_plate2"
                        style="@style/normal_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/reserve_center_margin_left_right"
                        android:paddingRight="@dimen/reserve_center_margin_left_right" />

                    <ImageView
                        android:id="@+id/self_reserve_choice_plate2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:paddingLeft="@dimen/reserve_center_margin_left_right"
                        android:paddingRight="@dimen/reserve_center_margin_left_right"
                        android:src="@mipmap/arraw_d" />

                    <EditText
                        android:id="@+id/self_reserve_car_plate3"
                        style="@style/normal_text_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/reserve_center1_margin_left"
                        android:textColorHint="@color/text_hint" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/self_view_margin_left"
                        android:text="@string/self_car_user"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_font_size" />

                    <EditText
                        android:id="@+id/self_reserve_use_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/reserve_maintain_input_name_hint"
                        android:textColor="@color/text_hint"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/normal_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/self_view_margin_left"
                        android:text="@string/self_car_user_phone"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_font_size" />

                    <EditText
                        android:id="@+id/self_reserve_use_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/reserve_maintain_input_phone_hint"
                        android:textColor="@color/text_hint"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/normal_font_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/self_reserve_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/common_top_bottom_line_bg"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/self_reserve_money_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/orange"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="bottom"
                android:text="@string/maintain_money_unit"
                android:textColor="@color/orange" />

        </LinearLayout>

        <TextView
            android:id="@+id/self_reserve_pay_button"
            style="@style/commonButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/self_reserve_pay_by_wechat" />
    </LinearLayout>

</LinearLayout>