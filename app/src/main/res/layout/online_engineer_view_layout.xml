<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_top_bottom_line_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/tuan_facade_title_margin_top_bottom"
        android:text="@string/engineer_online"
        android:textColor="@color/orange"
        android:textSize="@dimen/normal_font_size"/>

    <com.ceyu.carsteward.common.ui.views.HorizontalListView
        android:id="@+id/online_engineer_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/online_list_view_height"
        android:paddingLeft="@dimen/user_head_margin_bottom"
        android:divider="@null" />
</LinearLayout>