<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bottom_line_layout"
        android:orientation="vertical">

        <com.ceyu.carsteward.self.views.SelfViewPager
            android:id="@+id/self_top_view_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/maintain_page_top_height" />

        <com.ceyu.carsteward.common.views.IndicatorView
            android:id="@+id/self_top_view_indicator"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/self_radio_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/common_block_view_margin_top"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/self_recommend_tab"
            style="@style/SelfRadioButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/self_recommend_maintain" />

        <RadioButton
            android:id="@+id/self_manual_tab"
            style="@style/SelfRadioButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/self_maintain" />
    </RadioGroup>

    <com.ceyu.carsteward.self.views.SelfViewPager
        android:id="@+id/self_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>