<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tuan_content_main_layout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/tuan_content_view_margin_left"
                android:paddingRight="23dp"
                android:paddingTop="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ceyu.carsteward.common.ui.views.RoundCornerImageView
                        android:id="@+id/tuan_content_shop_image"
                        android:layout_width="119dp"
                        android:layout_height="@dimen/tuan_facade_item1_height" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tuan_facade_item1_height"
                        android:layout_marginLeft="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tuan_content_shop_title"
                            style="@style/middle_text_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tuan_content_end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/small_font_size" />

                            <TextView
                                android:id="@+id/tuan_content_shop_name"
                                style="@style/middle_text_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:gravity="right" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tuan_content_shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/tuan_content_view_margin_left"
                android:paddingRight="@dimen/tuan_content_view_margin_left"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tuan_describe_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/tuan_content_describe_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="@dimen/middle_font_size"
                    android:textColor="@color/text_hint"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="@dimen/tuan_content_view_margin_left"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/common_bottom_line_layout"
                    android:gravity="center_vertical"
                    android:text="@string/tuan_content_describe_content"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/middle_font_size" />

                <TextView
                    android:id="@+id/tuan_content_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="15dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size"
                    android:paddingLeft="@dimen/tuan_content_view_margin_left"
                    android:paddingRight="@dimen/tuan_content_view_margin_left"
                    android:paddingTop="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tuan_content_service_end_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/tuan_content_view_margin_left"
                android:textColor="@color/normal_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tuan_content_view_margin_top"
                android:background="@drawable/common_top_bottom_line_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="@dimen/tuan_content_view_margin_left"
                    android:background="@drawable/common_bottom_line_layout"
                    android:gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:text="@string/tuan_use_need_know"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/middle_font_size" />

                <TextView
                    android:id="@+id/tuan_content_use_should_know"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="15dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/middle_font_size"
                    android:paddingLeft="@dimen/tuan_content_view_margin_left"
                    android:paddingRight="@dimen/tuan_content_view_margin_left"
                    android:paddingTop="15dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/maintain_shop_order_layout_height"
        android:layout_gravity="bottom"
        android:background="@drawable/common_top_line_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tuan_content_people_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/maintain_discount_margin_left"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:id="@+id/tuan_content_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/maintain_list_content_margin_right"
            android:gravity="bottom"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/maintain_list_content_unit_margin_bottom"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="bottom"
            android:text="@string/maintain_money_unit"
            android:textColor="@color/orange"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tuan_content_pay_button"
            style="@style/commonButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/maintain_combo_i_want_order" />
    </LinearLayout>

</LinearLayout>