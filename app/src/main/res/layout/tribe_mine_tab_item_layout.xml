<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/tribe_mine_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/tribe_mine_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/normal_font_size"/>
        <TextView
            android:id="@+id/tribe_action_more_dot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignRight="@id/tribe_mine_tab_title"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/tribe_mine_dot_shap" />
    </RelativeLayout>
</RelativeLayout>