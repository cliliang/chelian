<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/packet_exchange_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/take_packet_exchange_button_bg"
        android:hint="@string/please_input_exchange_code"
        android:textColorHint="@color/text_hint"
        style="@style/middle_text_style"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/packet_exchange_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/orange"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:background="@drawable/take_packet_exchange_button_bg"
        android:text="@string/red_packet_action_exchange"
        android:textSize="@dimen/middle_font_size"/>
   
</LinearLayout>