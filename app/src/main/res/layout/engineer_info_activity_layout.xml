<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/engineer_info_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/engineer_info_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/common_top_line_bg">

        <TextView
            android:id="@+id/engineer_info_play_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@color/orange"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/engineer_info_button_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            style="@style/commonButtonStyle"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/engineer_pay_now"
            android:textSize="@dimen/large_font_size" />

    </LinearLayout>

    <ListView
        android:id="@+id/engineer_info_comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/engineer_info_bottom_layout"
        android:layout_alignParentTop="true"
        android:cacheColorHint="@color/transparency"
        android:listSelector="@color/transparency"
        android:divider="@null"
        android:scrollbars="none" />


</RelativeLayout>