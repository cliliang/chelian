<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:minHeight="@dimen/maintain_group_child_item_min_height"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maintain_reserve_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/middle_font_size" />

        <TextView
            android:id="@+id/maintain_reserve_item_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/middle_font_size" />

        <TextView
            android:id="@+id/maintain_reserve_item_price"
            android:layout_width="@dimen/maintain_money_max_width"
            android:layout_height="wrap_content"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/middle_font_size" />

        <ImageView
            android:id="@+id/maintain_reserve_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arraw_d" />

    </LinearLayout>
</LinearLayout>