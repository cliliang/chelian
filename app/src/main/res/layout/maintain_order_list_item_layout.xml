<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_top_bottom_line_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/reserve_order_item_padding_left_right"
        android:paddingRight="@dimen/reserve_order_item_padding_left_right">

        <TextView
            android:id="@+id/tuan_order_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reserve_order_item_top_view_height"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/middle_text_style"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/maintain_order_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reserve_order_item_top_view_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/maintain_item_icon"
                android:layout_width="@dimen/reserve_car_icon_width"
                android:layout_height="@dimen/reserve_car_icon_width"
                android:contentDescription="@android:string/cancel" />

            <TextView
                android:id="@+id/maintain_item_car_model"
                style="@style/normal_text_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/reserve_pay_check_margin_right"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/maintain_item_plate"
                style="@style/normal_text_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

        </LinearLayout>
        


        <include layout="@layout/common_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reserve_pay_check_margin_right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maintain_item_sn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/maintain_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maintain_item_shop_name"
                style="@style/normal_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/maintain_item_shop_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/reserve_pay_check_margin_right"
                android:background="@drawable/common_orange_round_bg"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/maintain_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/large_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maintain_item_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/middle_font_size" />

            <TextView
                android:id="@+id/maintain_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/middle_font_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/reserve_order_time"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/middle_font_size" />

            <TextView
                android:id="@+id/maintain_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/middle_font_size" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
